<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ContactHub</title>
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/site")
    @Styles.Render("~/Content/fontawesome")
    @Scripts.Render("~/Script/modernizer")
    @Scripts.Render("~/Script/es6-module-loader")
    @Scripts.Render("~/Script/respond")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".userLinks">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ContactHub", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
    </div>
    <div class="navbar navbar-default navbar-fixed-bottom">
        <div class="container">
            <div class="navbar-header">
                <p class="navbar-brand">&copy; @DateTime.Now.Year - ContactHub</p>
            </div>
        </div>
    </div>
    <div class="modal fade" tabindex="-1" role="dialog" id="loader">
        <div class="modal-dialog text-center" role="document">
            <i class="fa fa-circle-o-notch fa-spin fa-5x fa-fw spinnerColor"></i>
        </div>
    </div>
</body>
</html>