@model ContactHub_MVC.Models.UserModel.SyncContacts
@{
    ViewBag.Title = "SyncContacts";
}

<div class="row">
    <div class="col-md-3">
        <div class="page-header">
            <h2 class="forColorWhite">Sync Contacts</h2>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="">Restore Contacts</h3>
            </div>
            <div class="panel-body">
                <form class="form-horizontal" role="form">
                    <div class="form-group">
                        <label class="col-md-4 control-label">@Html.DisplayNameFor(d => d.ContactMode)</label>
                        <div class="col-md-7">
                            @Html.DropDownListFor(m => m.ContactMode, (IEnumerable<SelectListItem>)Model.ContactModeList, "Select", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">@Html.DisplayNameFor(d => d.PhoneNumber)</label>
                        <div class="col-md-7">
                            @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-7 col-md-offset-4">
                            <button class="btn btn-primary">Sync</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="page-header">
            <h2 class="forColorWhite">Contacts</h2>
        </div>
        @Html.Partial("Partial/_SyncContacts", Model.ContactList)
    </div>
    <div class="col-md-4 hide" id="detailColumn">
        <div class="page-header">
            <h2 class="forColorWhite">Contact Detail</h2>
        </div>
        <div id="showDetail">

        </div>
    </div>

</div>
@Scripts.Render("~/Script/bootstrap")
<script>System.import("../Scripts/app/Account.js")</script>
<script>System.import("../Scripts/app/syncContacts.js")</script>