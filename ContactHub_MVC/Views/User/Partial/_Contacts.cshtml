@model IEnumerable<ContactHub_MVC.Models.UserModel.ContactDetails>

<div class="table-responsive thumbnail">
    <table class="table table-hover text-center text-justify">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email Address</th>
                <th>Phone</th>
                <th>Gender</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count() > default(int))
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FullName</td>
                        <td>@item.EmailAddress</td>
                        <td>@item.Phone</td>
                        <td>@item.Gender</td>
                        @if (item.IsEditable)
                        {
                            <td>
                                <div class="btn-group" aria-label="...">
                                    <button type="button" class="fa fa-edit btn btn-default" value="@item.Id" id="editContact"></button>
                                    <button type="button" class="fa fa-trash btn btn-default" value="@item.Id" id="deleteContact"></button>
                                </div>
                            </td>
                        }
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5">
                        <div class="alert alert-danger" role="alert">
                            <p>No contact to display.</p>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>